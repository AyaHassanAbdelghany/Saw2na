<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mcommerceapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MCommerceApp">
        <activity
            android:name="com.example.mcommerceapp.view.ui.addresses.view.add_address.AddAddressActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.addresses.view.AddressesActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.payment.view.Payment"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.search.view.SearchActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.authentication.signup.view.SignUpActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.feature_product.CategorizedProductActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity android:name=".view.ui.order.OrderActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".view.ui.order_detail.OrderDetailActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".view.ui.review.ReviewActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".view.ui.shopping_cart.view.ShoppingCartScreen"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.product_detail.view.ProductDetail"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.ui.authentication.signin.view.SigninActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.ui.favorite_product.view.FavoriteScreen"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.splash_screen.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".view.MainActivity"
            android:screenOrientation="portrait"/>


        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
    </application>

</manifest>