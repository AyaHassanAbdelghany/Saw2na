<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mcommerceapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MCommerceApp">
        <activity
            android:name="com.example.mcommerceapp.view.ui.addresses.view.add_address.AddAddressActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.addresses.view.AddressesActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.payment.view.Payment"
            android:exported="false" />
        <activity
            android:name=".view.ui.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".view.ui.feature_product.CategorizedProductActivity"
            android:exported="false" />

        <activity android:name=".view.ui.order.OrderActivity" />
        <activity android:name=".view.ui.authentication.signup.view.SignUpActivity" />

        <activity android:name=".view.ui.order_detail.OrderDetailActivity" />

        <activity
            android:name=".view.ui.shopping_cart.view.ShoppingCartScreen"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".view.ui.product_detail.view.ProductDetail"
            android:exported="false" />
        <activity android:name=".view.ui.authentication.signin.view.SigninActivity" />
        <activity android:name=".view.ui.favorite_product.view.FavoriteScreen" />
        <activity
            android:name=".view.ui.splash_screen.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".MainActivity" />


        <meta-data
            android:name="com.google.android.gms.wallet.api.enabled"
            android:value="true" />
    </application>

</manifest>