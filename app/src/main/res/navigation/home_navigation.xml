<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@layout/fragment_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mcommerceapp.view.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">


        <action
            android:id="@+id/actCategory"
            app:destination="@id/navigation_category"
            >
        </action>
        <action
            android:id="@+id/actCategoryMore"
            app:destination="@id/navigation_category"
            >
        </action>
    </fragment>


    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.mcommerceapp.view.ui.category.CollectionTabLayoutFragment"
        tools:layout="@layout/fragment_category" >
    </fragment>

</navigation>