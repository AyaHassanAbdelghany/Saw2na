<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.mcommerceapp.view.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/feature_product"
            app:destination="@id/navigation_feature_Product"
            >
        </action>
        <action
            android:id="@+id/category"
            app:destination="@id/navigation_category"
            >
        </action>
    </fragment>
    <fragment
        android:id="@+id/navigation_feature_Product"
        android:name="com.example.mcommerceapp.view.ui.dashboard.DashboardFragment"
        tools:layout="@layout/categorized_product_screen" />

    <fragment
        android:id="@+id/navigation_category"
        android:name="com.example.mcommerceapp.view.ui.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.mcommerceapp.view.ui.profile.view.Profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>