<resources>
    <!-- Base application theme. -->

    <style name="Theme.MCommerceApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="android:windowNoTitle">true</item>-->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_dark</item>
        <item name="android:navigationBarColor">@color/blue_dark</item>
    </style>

    <style name="myTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <style name="Theme.MCommerceApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MCommerceApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/blue_dark</item>
        <item name="colorControlActivated">@color/blue_dark</item>
    </style>

</resources>