<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SearchView
        android:id="@+id/simpleSearchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:queryHint="Search"
        android:background="@drawable/corner_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/filterImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/simpleSearchView"
        app:layout_constraintStart_toEndOf="@id/simpleSearchView"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toStartOf="@id/cartImage"
        android:src="@drawable/ic_baseline_filter_alt_24"
        app:layout_constraintHorizontal_bias="0.5"/>


    <ImageView
        android:id="@+id/cartImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_shopping_cart_24"
        app:layout_constraintTop_toTopOf="@id/filterImage"
        app:layout_constraintStart_toEndOf="@id/filterImage"/>
</androidx.constraintlayout.widget.ConstraintLayout>