<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.profile.view.Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loggedIn_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/user"
             />

        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="134dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/colored_border_button_background"
            android:text="@string/edit_profile"
            android:textColor="#00838F"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/user_email_textView" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/colored_border_button_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.404"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/pending_shipments"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/navigate_arrow"
                android:contentDescription="TODO" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/colored_border_button_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:contentDescription="TODO" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/pending_payments"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/navigate_arrow" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/colored_border_button_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/finished_orders"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/navigate_arrow" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/colored_border_button_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_button">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/all_my_orders"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/navigate_arrow" />

        </LinearLayout>

        <TextView
            android:id="@+id/display_name_textView"
            android:layout_width="199dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_email_textView"
            android:layout_width="199dp"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/display_name_textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/not_loggedIn_container"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/user" />

        <Button
            android:id="@+id/profile_signin_button"
            android:layout_width="174dp"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/colored_border_button_background"
            android:text="@string/Signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="@string/sign_in_first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>