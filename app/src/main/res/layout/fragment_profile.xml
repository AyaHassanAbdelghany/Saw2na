<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.profile.view.Profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loggedIn_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="152dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/display_name_textView"
            android:layout_width="199dp"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="152dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_email_textView"
            android:layout_width="199dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/display_name_textView" />

        <Button
            android:id="@+id/edit_profile_button"
            android:layout_width="134dp"
            android:layout_height="48dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/colored_border_button_background"
            android:text="@string/edit_profile"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/user_email_textView" />

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="46dp"
            android:orientation="horizontal"
            android:background="@drawable/colored_border_button_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_button">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/all_my_orders" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/navigate_arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="128dp"
            android:orientation="horizontal"
            android:background="@drawable/colored_border_button_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_button">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/pending_shipments" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/navigate_arrow" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="212dp"
            android:orientation="horizontal"
            android:background="@drawable/colored_border_button_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_button">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/pending_payments" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/navigate_arrow" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="59dp"
            android:layout_marginTop="288dp"
            android:orientation="horizontal"
            android:background="@drawable/colored_border_button_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_profile_button">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_shopping_cart_24" />

            <TextView
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/finished_orders" />

            <ImageView
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/navigate_arrow" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/not_loggedIn_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="200dp"
            android:layout_height="202dp"
            android:layout_marginTop="212dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/Signin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="@string/sign_in_first"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView15" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>