<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_border"
    app:cardCornerRadius="20sp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25sp">

        <TextView
            android:id="@+id/name_order_detail_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/app_name"
            app:layout_constraintHorizontal_bias="0.2"/>

        <TextView
            android:id="@+id/price_order_detail_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/name_order_detail_txt"
            app:layout_constraintTop_toBottomOf="@id/name_order_detail_txt"
            android:text="23.00"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/quantity_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/price_order_detail_txt"
            app:layout_constraintTop_toBottomOf="@id/price_order_detail_txt"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>