<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            >
           <androidx.viewpager2.widget.ViewPager2
               android:id="@+id/advViewPager"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_margin="20sp"/>

            <TextView
                android:id="@+id/catogery"
                app:layout_constraintTop_toBottomOf="@id/advViewPager"
                app:layout_constraintStart_toStartOf="@id/constraint"
                android:text="Catogery"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/catogery_view_moreTextView"
                app:layout_constraintTop_toTopOf="@id/catogery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/recycler_list_collection"
                android:layout_marginEnd="10dp"
                android:text="View more"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@id/catogery"
                app:layout_constraintStart_toStartOf="@id/catogery"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/recycler_list_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_list_collection" />

            <ImageView
                android:id="@+id/coupon_image"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/catogery"
                app:layout_constraintTop_toBottomOf="@id/recycler_list_collection"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.2"
                android:src="@drawable/promo"
                >
            </ImageView>

            <TextView
                android:id="@+id/brand"
                app:layout_constraintTop_toBottomOf="@id/coupon_image"
                app:layout_constraintStart_toStartOf="@id/constraint"
                android:text="@string/brands"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@id/brand"
                app:layout_constraintStart_toStartOf="@id/brand"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/recycler_list_vendor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_list_vendor" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>