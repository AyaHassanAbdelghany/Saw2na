<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".view.ui.favorite_product.view.FavoriteScreen">


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="@drawable/border_cart_item_image_border"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/dummy_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_cureency_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="$"
        app:layout_constraintStart_toStartOf="@id/product_image"
        app:layout_constraintTop_toBottomOf="@id/product_image" />

    <TextView
        android:id="@+id/product_value_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:text="15"
        app:layout_constraintStart_toEndOf="@id/product_cureency_tx"
        app:layout_constraintTop_toTopOf="@id/product_cureency_tx" />


    <TextView
        android:id="@+id/product_name_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/product_cureency_tx"
        app:layout_constraintTop_toBottomOf="@id/product_cureency_tx" />


    <ImageButton
        android:id="@+id/product_delete_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_delete"
        app:layout_constraintBottom_toBottomOf="@id/product_name_tx"
        app:layout_constraintEnd_toEndOf="@id/product_image"
        app:layout_constraintTop_toTopOf="@id/product_cureency_tx" />


</androidx.constraintlayout.widget.ConstraintLayout>